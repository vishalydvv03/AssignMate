@model AssignMate.Core.Models.ReadTask
@{
    ViewData["Title"] = "Task Details";
}

<h2>@Model.Title</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Assigned Date:</strong> @Model.AssignedDate.ToString("yyyy-MM-dd")</p>
        <p><strong>Due Date:</strong> @Model.DueDate.ToString("yyyy-MM-dd")</p>
        <p><strong>Assigned To:</strong> @string.Join(", ", Model.AssignedTo)</p>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Task" asp-action="EditTask" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <form asp-controller="Task" asp-action="DeleteTask" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a asp-controller="Task" asp-action="GetAllTasks" class="btn btn-secondary">Back to List</a>
</div>
