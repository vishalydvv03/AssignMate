@model AssignMate.Core.Models.ReadUser

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">User Details</h4>
        </div>
        <div class="card-body">
            <div class="mb-3">
            <div class="mb-3">
                <strong>Name:</strong>
                <div>@Model.Name</div>
            </div>
            <div class="mb-3">
                <strong>Role:</strong>
                <div>@Model.Role</div>
            </div>
            <div class="mb-3">
                <strong>Email:</strong>
                <div>@Model.Email</div>
            </div>
            <div class="mb-3">
                <strong>Date of Birth:</strong>
                <div>@Model.DateOfBirth.ToString("yyyy-MM-dd")</div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a asp-controller="User" asp-action="EditUser" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <form asp-controller="User" asp-action="DeleteUser" asp-route-id="@Model.Id" method="post" class="d-inline"
                  onsubmit="return confirm('Are you sure you want to delete this user?');">
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>
</div>
