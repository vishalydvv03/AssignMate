@{
    Layout = "_Layout";
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh; background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%); padding: 50px 15px;">
    <div class="card shadow-lg text-center text-dark" style="width: 700px; border-radius: 15px; padding: 40px; background-color: #f8f9fa;">
        <h1 class="mb-4" style="font-weight: 700; color: #333;">Welcome to AssignMate</h1>
        <p class="mb-5 text-muted fs-5">Manage your tasks efficiently and stay organized.</p>
        <div class="d-flex justify-content-center gap-4">
            <a class="btn btn-primary btn-lg px-5 shadow-sm" asp-controller="Task" asp-action="Create" style="border-radius: 50px;">Assign Task</a>
            <a class="btn btn-outline-primary btn-lg px-5 shadow-sm" asp-controller="Task" asp-action="Index" style="border-radius: 50px;">View Tasks</a>
        </div>
    </div>
</div>
