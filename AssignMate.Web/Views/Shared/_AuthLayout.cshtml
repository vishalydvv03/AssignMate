@* Views/Shared/_AuthLayout.cshtml *@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - AssignMate</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .login-container {
            height: 100vh;
        }

        .image-side {
            background: url('/images/task.png') no-repeat center center;
            background-size: cover;
        }

        .form-side {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #fff;
        }

        .form-card {
            width: 100%;
            max-width: 350px;
        }
    </style>
</head>
<body>
    <div class="container-fluid login-container">
        <div class="row h-100">
            <!-- Left Image Section -->
            <div class="col-md-6 d-none d-md-block image-side"></div>

            <!-- Right Form Section -->
            <div class="col-md-6 form-side">
                <div class="form-card">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</body>
</html>
