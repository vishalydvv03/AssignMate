@using AssignMate.Core.Enums
@model AssignMate.Core.Models.UserRegister
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Register";
}

<h3 class="mb-4 text-center">Register</h3>
<form method="post" asp-action="Register">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    <div class="mb-3">
        <label class="form-label">Full Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
    </div>

    <div class="mb-3">
        <label class="form-label">Email address</label>
        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Enter your password" />
    </div>

    <div class="mb-3">
        <label class="form-label">Date of Birth</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Role</label>
        <select asp-for="Role" class="form-control" >
            <option value="">-- Select Role --</option>
            <option value="Student">Student</option>
            <option value="Teacher">Teacher</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success w-100">Register</button>

    <div class="mt-3 text-center">
        <small>Already have an account? <a href="/login">Login</a></small>
    </div>
</form>
